<div class="navbar-pool">
  <!-- Logo -->

  <div class="title">
    <%= link_to root_path, class: "navbar-pool-brand" do %>
    <% end %>
    <%= link_to "Denver Pool", root_path, id: "title-name" %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-pool-right hidden-xs hidden-sm">
    <%= link_to "About", about_path, class: "navbar-pool-item navbar-pool-link" %>
    <%= link_to "Contact", contact_path, class: "navbar-pool-item navbar-pool-link" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-pool-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-pool-dropdown-menu">
        <li>
          <%= link_to about_path do %>
            <%= t("About") %>
          <% end %>
        </li>
          <li>
          <%= link_to contact_path do %>
            <%= t("Contact Us") %>
          <% end %>
        </li>
        <li><a href="/#services-box" >Services</a></li>
      </ul>
    </div>
  </div>
</div>


